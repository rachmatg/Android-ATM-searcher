<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- don`t working... -->
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>

    </style>


    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:background">@drawable/button_background</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AtmListItem" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">88dp</item>
    </style>

    <style name="AtmListItem.TextPrimary" parent="AppTheme">
        <item name="android:textSize">@dimen/text_primary_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AtmListItem.TextSecondary" parent="AppTheme">
        <item name="android:textSize">@dimen/text_secondary_size</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AtmListItem.IconLayout" parent="AppTheme">
        <item name="android:padding">16dp</item>
    </style>

    <style name="AtmDetail.TextPrimary" parent="AppTheme">
        <item name="android:textSize">@dimen/text_primary_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Styling SearchView widget -->
    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
       <!-- <item name="queryBackground">@android:color/transparent</item> -->
    </style>

</resources>
